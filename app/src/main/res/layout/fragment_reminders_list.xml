<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="8dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="16dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/curtain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp"

                android:background="@color/main_color_dark"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingBottom="16dp"
                >

                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="6dp"

                    android:src="@drawable/ic_menu"
                    android:contentDescription="@string/menu"
                    app:tint="@color/white"

                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"

                    />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:elevation="6dp"

                    android:text="User's table"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:textStyle="bold"

                    app:layout_constraintBottom_toBottomOf="@+id/menu"
                    app:layout_constraintEnd_toStartOf="@+id/filter"
                    android:layout_marginStart="16dp"
                    app:layout_constraintStart_toEndOf="@id/menu"
                    app:layout_constraintTop_toTopOf="@+id/menu" />

                <TextView
                    android:id="@+id/month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="4dp"
                    android:text="September"
                    android:textColor="@color/white"

                    app:layout_constraintEnd_toEndOf="@+id/filter"
                    app:layout_constraintStart_toStartOf="@id/menu"
                    app:layout_constraintTop_toBottomOf="@id/title" />

                <ImageView
                    android:id="@+id/showDaysList"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_arrow_down"
                    app:tint = "@color/white"

                    app:layout_constraintTop_toTopOf="@id/month"
                    app:layout_constraintStart_toEndOf="@id/month"
                    android:layout_marginStart="4dp"
                    app:layout_constraintBottom_toBottomOf="@id/month"/>

                <ImageView
                    android:id="@+id/filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:src="@drawable/ic_filter_list"
                    app:tint="@color/white"
                    android:contentDescription="@string/filter"

                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    />



            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/daysRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:listitem="@layout/item_day"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"

                app:layout_constraintStart_toStartOf="parent"
                android:paddingStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/curtain"
                android:layout_marginTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingEnd="2dp"

                android:visibility="gone"/>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/remindersRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:itemCount="3"
                tools:listitem="@layout/item_reminder"

                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="8dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@id/daysRecyclerView"
                android:layout_marginTop="8dp"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/moreOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/buttons_color"
        app:tint="@color/white"
        app:srcCompat="@drawable/ic_more_horiz"
        app:borderWidth="0dp"
        android:contentDescription="@string/more"

        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="36dp"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/clearAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:fabSize="mini"
        app:srcCompat="@drawable/ic_delete_all"
        app:tint="@color/white"
        app:borderWidth="0dp"
        android:contentDescription="@string/delete"
        android:visibility="invisible"

        app:layout_constraintStart_toStartOf="@id/moreOptions"
        app:layout_constraintBottom_toTopOf="@id/moreOptions"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="@id/moreOptions"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/newReminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:fabSize="mini"
        app:srcCompat="@drawable/ic_baseline_add_24"
        app:tint="@color/white"
        app:borderWidth="0dp"
        android:contentDescription="@string/addReminder"
        android:visibility="invisible"

        app:layout_constraintStart_toStartOf="@id/clearAll"
        app:layout_constraintBottom_toTopOf="@id/clearAll"
        android:layout_marginBottom="16dp"
        app:layout_constraintEnd_toEndOf="@id/clearAll"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="8dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>