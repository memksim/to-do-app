<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ToDoList" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_mode_main</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">@color/test_accent</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_mode_secondary</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialCalendarTheme">@style/ThemeOverlay.App.DatePicker</item>
        <item name="materialTimePickerTheme">@style/ThemeOverlay.App.TimePicker</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="ThemeOverlay.App.DatePicker"
        parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">

        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--<item name="colorPrimary">@color/second_color</item>
        <item name="colorOnPrimary">@color/white</item>-->
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>

    </style>

    <style name="ThemeOverlay.App.TimePicker"
        parent="@style/ThemeOverlay.MaterialComponents.TimePicker">

        <item name="colorPrimary">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent</item>

    </style>

    <style name="ShapeAppearance.App.MediumComponent"
        parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>


</resources>